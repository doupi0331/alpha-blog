<div class="row">
	<div class="col-sm-12">
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="col-sm-5 control-label">
					<%= f.label :username %>
				</div>
				<div class="col-sm-4">
					<%= f.text_field :username, class: "form-control", placeholder: "Enter user name", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-5 control-label">
					<%= f.label :email %>
				</div>
				<div class="col-sm-4">
					<%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-5 control-label">
					<%= f.label :password %>
				</div>
				<div class="col-sm-4">
					<%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-5 control-label">
					<%= f.label :password_confirmation %>
				</div>
				<div class="col-sm-4">
					<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter password" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-5 col-sm-2">
					<%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-warning btn-lg") %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-5 col-sm-2">
					[ <%= link_to "Cancel", root_path%> ]
				</div>
			</div>
		<% end %>
	</div>
</div>