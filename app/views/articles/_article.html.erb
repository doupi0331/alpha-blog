<% obj.each do |article| %>
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">
			<div class="well well-lg">
				<div class="article-title row">
					<div class="col-sm-8">
					  <%= link_to article.title, article_path(article) %>
					</div>
					<div class="col-sm-4" align="right">
					  <%= article.created_at.strftime('%F') %>
					</div>
					
				</div>
				<div class="article-body">
					<%= "#{truncate(article.description, length: 100)}..." %>
				</div>
				<div class="row article-meta-details">
					<div class="col-sm-6" align="left">
						<% if article.categories.any? %>
			  				Categories: <%= render article.categories %>
			      		<% end %>
					</div>
					<div class="col-sm-6" align="right">
						<small>
							Created by: <%= article.user.username if article.user %>, 
							<%= time_ago_in_words(article.created_at) %> ago 
							<!--last updated: <%= time_ago_in_words(article.updated_at) if article.updated_at %> ago -->
						</small>
					</div>
				</div>
				<% if logged_in? && (current_user == article.user || current_user.admin?) %>
					<div class="article-actions">
						<%= link_to "âœ Edit this article", edit_article_path(article), class: "btn btn-xs btn-primary"%> 
						<%= link_to "âœ˜ Delete this article", article_path(article), method: :delete, 
									data: { confirm: "Are you sure you want to delete the article>" }, 
									class: "btn btn-xs btn-danger"%>
					</div>
				<% end %>
			</div>
		</div>
	</div>
<% end %>